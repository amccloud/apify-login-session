{
  "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "newLine": "lf",
      "noImplicitAny": true,
      "allowJs": false,
      "checkJs": false,
      "rootDir": "./src",
      "outDir": "./lib",
      "strict": true,
      "esModuleInterop": false,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": false,
      "pretty": true,
      "removeComments": false,
      "lib": [
          "DOM",
          "DOM.Iterable",
          "ES2018.AsyncIterable"
      ]
  },
  "include": [
      "./src/*.ts"
  ]
}
